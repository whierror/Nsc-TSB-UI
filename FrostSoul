local Players = game:GetService("Players")

local player = Players.LocalPlayer

local playerGui = player:WaitForChild("PlayerGui")

local function replace()
	ToolName1.Text = "Lightwave Cascade"
	ToolName2.Text = "Overdrive Impact"
	ToolName3.text = "Quick Cut"
	ToolName4.Text = "Novalight Dash"
end


local function findGuiAndSetText()

    local screenGui = playerGui:FindFirstChild("ScreenGui")

    if screenGui then

        local magicHealthFrame = screenGui:FindFirstChild("MagicHealth")

        if magicHealthFrame then
                local textLabel = magicHealthFrame:FindFirstChild("TextLabel")
                if textLabel then
                    textLabel.Text = "Frost Soul"
                end
              
                local healthBar = magicHealthFrame:FindFirstChild("Health").Bar.Bar
                if healthBar then
                    healthBar.ImageColor3 = Color3.fromRGB(0, 255, 255)
                end

        end

    end

end

findGuiAndSetText()

